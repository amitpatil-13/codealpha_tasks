import tkinter as tk
from tkinter import ttk, messagebox
from deep_translator import GoogleTranslator

languages = {
    "English": "en",
    "Hindi": "hi",
    "Tamil": "ta",
    "Telugu": "te",
    "French": "fr",
    "Spanish": "es",
    "German": "de",
    "Japanese": "ja"
}

def translate_text():
    text = input_text.get("1.0", tk.END).strip()
    if not text:
        messagebox.showwarning("Warning", "Please enter text")
        return

    src = languages[source_lang.get()]
    dest = languages[target_lang.get()]

    try:
        translated = GoogleTranslator(source=src, target=dest).translate(text)
        output_text.delete("1.0", tk.END)
        output_text.insert(tk.END, translated)
    except Exception as e:
        messagebox.showerror("Error", str(e))

root = tk.Tk()
root.title("Language Translator")
root.geometry("500x420")
root.resizable(False, False)

tk.Label(root, text="Enter Text").pack(pady=5)
input_text = tk.Text(root, height=6, width=55)
input_text.pack()

frame = tk.Frame(root)
frame.pack(pady=10)

tk.Label(frame, text="From").grid(row=0, column=0, padx=10)
tk.Label(frame, text="To").grid(row=0, column=2, padx=10)

source_lang = ttk.Combobox(frame, values=list(languages.keys()), state="readonly")
source_lang.grid(row=0, column=1)
source_lang.set("English")

target_lang = ttk.Combobox(frame, values=list(languages.keys()), state="readonly")
target_lang.grid(row=0, column=3)
target_lang.set("Hindi")

tk.Button(root, text="Translate", command=translate_text).pack(pady=10)

tk.Label(root, text="Translated Text").pack()
output_text = tk.Text(root, height=6, width=55)
output_text.pack()

root.mainloop()
